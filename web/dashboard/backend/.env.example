# Stellar Network Configuration
STELLAR_NETWORK=TESTNET
STELLAR_HORIZON_URL=https://horizon-testnet.stellar.org
STELLAR_SOROBAN_RPC_URL=https://soroban-testnet.stellar.org
STELLAR_NETWORK_PASSPHRASE=Test SDF Network ; September 2015

# Contract IDs (update with your deployed contract addresses)
ARBITRAGE_DETECTOR_CONTRACT_ID=your_arbitrage_detector_contract_id_here
REFLECTOR_ORACLE_CONTRACT_ID=your_reflector_oracle_contract_id_here
TRADING_ENGINE_CONTRACT_ID=your_trading_engine_contract_id_here
FLASH_LOAN_ENGINE_CONTRACT_ID=your_flash_loan_engine_contract_id_here

# Reflector Oracle API Configuration
# Get these from https://reflector.network/
REFLECTOR_API_URL=https://api.reflector.network/v1
REFLECTOR_API_KEY=your_reflector_api_key_here
REFLECTOR_WS_URL=wss://ws.reflector.network/v1

# Server Configuration
PORT=8768
HOST=localhost
DEBUG=true

# Security Configuration
# Generate strong random keys for production
SECRET_KEY=your_secret_key_here_change_in_production
JWT_SECRET=your_jwt_secret_here_change_in_production
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Database Configuration (if needed for future features)
DATABASE_URL=sqlite:///arbitrage.db

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/arbitrage.log

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Simulation Parameters
NUM_ACCOUNTS=10
SIMULATION_INTERVAL=10
ARBITRAGE_SCAN_INTERVAL=15

# Trading Parameters
MIN_PROFIT_THRESHOLD=0.01
MAX_TRADE_AMOUNT=1000
SLIPPAGE_TOLERANCE=0.005

# Monitoring and Alerts
ENABLE_MONITORING=true
ALERT_EMAIL=admin@example.com
WEBHOOK_URL=https://hooks.slack.com/your-webhook-url

# Production Settings (uncomment for production)
# STELLAR_NETWORK=PUBLIC
# STELLAR_HORIZON_URL=https://horizon.stellar.org
# STELLAR_SOROBAN_RPC_URL=https://soroban-rpc.stellar.org
# STELLAR_NETWORK_PASSPHRASE=Public Global Stellar Network ; September 2015
# DEBUG=false
# LOG_LEVEL=WARNING